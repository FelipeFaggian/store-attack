<!-- store body -->
<main>
  <!-- section's container -->
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="" style="font-weight: 900; color: rgb(53, 53, 53);">Veja abaixo nossos produtos! </h1>
        <!-- <p class="lead text-body-secondary"  style="font-weight: 900; color: rgb(53, 53, 53);"> Veja abaixo nossa coleção de mercadorias construída apropriadamente para lojistas. </p> -->
      </div>
    </div>
  </section>

  <!-- products's container -->
  <div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        <!-- product 1-->
         <% for (var i = 0; i < item.length; i++) { %>
            <form action="/product" method="POST">
              
              <button type="submit" value="<%= item[i]['id'] %>" name="productId" style="border-radius: 5px; width: 100%; height: 100%;">
                <div class="col">
                  <div class="card shadow-sm">
                    <img class="bd-placeholder-img card-img-top" src=" <%= item[i]['url_img'] %>" width="100%" height="225" alt="Estopa de Limpeza">
                      <div class="card-body">
                        <p class="card-text text-body-secondary"> <%= item[i]['name'] %> <br> <strong><%= item[i]['description'] %></strong> </p>
                          <div class="d-flex justify-content-between align-items-center">
                            <small class="card-text lead" style="color: green; width: 100%;"><strong> R$ <%= item[i]['price'] %></strong></small>
                          </div>
                     </div>
                  </div>
                </div>
              </button>
          </form>
        <% } %>     
</main>

  <!-- store footer-->
  <footer class="text-body-secondary py-5">
    <div class="container" style="display: flex; justify-content: space-between;">
    <div  style=" width: 30%; text-align: center; display: flex; justify-content: center; align-items: center;">
      <p class="float-end mb-1">
        <a href="/logout"><button class="btn btn-outline-secondary">Sair</button></a>
      </p>
    </div>
    <div style="width: 70%;">
      <p class="mb-1 lead" style="text-align: center;">Automultisom - © Todos os direitos reservados</p>
