<div class="container mt-5 login">
  <h1 class="login">Login</h1>

  <div class="row login">
    <div class="col-sm-8 login">
      <div class="card login">
        <div class="card-body login">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group login">
              <label for="email">E-mail</label>
              <input type="email" class="form-control login" name="username">
            </div>
            <div class="form-group login">
              <label for="password">Senha</label>
              <input type="password" class="form-control login" name="password">
            </div>
            <button type="submit" class="btn btn-dark login">Login</button>
          </form>

        </div>

      </div>
      <a href="/"><button style=" border: 1px solid rgb(68, 66, 66); border-radius: 5%; margin: 10px 0px;"> Retornar </button></a>
    </div>

